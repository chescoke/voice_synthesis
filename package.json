{
  "name": "voice-synthesis",
  "version": "1.0.0",
  "description": "Audio recording, transcription and text-to-speech synthesis",
  "main": "backend/dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node backend/dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only backend/src/server.ts",
    "dev:mongodb": "./backend/scripts/start-with-mongodb.sh",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/backend/tests/integration/**/*.test.ts'",
    "test:integration:awscredentials": "jest --testMatch='**/backend/tests/integration/aws-credentials.test.ts'",
    "test:unit": "jest --testMatch='**/backend/tests/unit/**/*.test.ts'",
    "test:unit:s3": "jest --testMatch='**/backend/tests/unit/s3.service.test.ts'",
    "test:credentials": "./backend/scripts/test-credentials.sh",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "audio",
    "transcription",
    "text-to-speech",
    "aws",
    "express",
    "mongodb"
  ],
  "author": "Francisco De La Blanca",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-polly": "^3.478.0",
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/client-sts": "^3.914.0",
    "@aws-sdk/client-transcribe": "^3.478.0",
    "@aws-sdk/lib-storage": "^3.478.0",
    "axios": "^1.6.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.4.21",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.5",
    "postcss": "^8.5.6",
    "supertest": "^6.3.3",
    "tailwindcss": "^4.1.15",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
